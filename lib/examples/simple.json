{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Register!",
          "weight": "bolder",
          "size": "medium"
        },
        {
          "type": "TextBlock",
          "text": "Let's get to know each other a bit better...",
          "isSubtle": true,
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "Name",
          "wrap": true,
          "separator": true
        },
        {
          "type": "Input.Text",
          "id": "name",
          "placeholder": "e.g. Lucy Smith"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ]
}
