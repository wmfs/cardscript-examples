{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "Jumbotron",
          "backgroundImage": "wmfs/happy-people.jpg",
          "title": "Register!",
          "wash": "black"
        },
        {
          "type": "Input.Name",
          "title": "Name",
          "id": "name",
          "spacing": "large",
          "validation": {
            "minLength": 5,
            "maxLength": 25,
            "required": true
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ]
}
