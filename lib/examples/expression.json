{
  "type": "AdaptiveCard",
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "I would like to leave some feedback",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "Input.Text",
            "id": "feedback",
            "isMultiline": true,
            "placeholder": "Feedback"
          }
        ]
      }
    }
  ],
  "body": [
    {
      "type": "Container",
      "backgroundImage": "<Insert blue image here> (as far as i can tell you can't have a background colour on a container, just an image",
      "items": [
        {
          "type": "TextBlock",
          "size": "large",
          "color": "light",
          "text": "All done!"
        },
        {
          "type": "TextBlock",
          "size": "Small",
          "color": "Light",
          "text": "We're all done here, we would really appreciate some feedback though!"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
