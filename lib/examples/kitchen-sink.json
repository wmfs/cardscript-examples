{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "id": "cardView",
      "title": "CardView",
      "items": [
        {
          "type": "TextBlock",
          "text": "CardView",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "id": "cardView",
          "type": "CardView",
          "instanceTitleTemplate": "You thought: '{{item.opinion}}'.",
          "title": "Click me!",
          "card": {
            "type": "AdaptiveCard",
            "body": [
              {
                "type": "TextBlock",
                "text": "What do you think?"
              },
              {
                "id": "opinion",
                "type": "Input.Text",
                "spacing": "large",
                "default": "Amazing!"
              }
            ]
          }
        }
      ]
    },
    {
      "type": "Container",
      "id": "collapsible",
      "title": "Collapsible",
      "items": [
        {
          "type": "TextBlock",
          "text": "Collapsible",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "Collapsible",
          "title": "Click me!",
          "card": {
            "type": "AdaptiveCard",
            "body": [
              {
                "type": "TextBlock",
                "text": "Hello!"
              }
            ]
          }
        }
      ]
    },
    {
      "type": "Container",
      "id": "columnSet",
      "title": "ColumnSet",
      "items": [
        {
          "type": "TextBlock",
          "text": "ColumnSet",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "col-1"
                },
                {
                  "type": "TextBlock",
                  "text": "col-1"
                }
              ]
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "col-2"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "container",
      "title": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Container",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "Container",
          "color": "accent",
          "spacing": "large",
          "items": [
            {
              "type": "TextBlock",
              "text": "Accent!"
            }
          ]
        },
        {
          "type": "Container",
          "color": "good",
          "spacing": "small",
          "items": [
            {
              "type": "TextBlock",
              "text": "Good!"
            }
          ]
        },
        {
          "type": "Container",
          "color": "warning",
          "spacing": "small",
          "items": [
            {
              "type": "TextBlock",
              "text": "Warning!"
            }
          ]
        },
        {
          "type": "Container",
          "color": "attention",
          "spacing": "small",
          "items": [
            {
              "type": "TextBlock",
              "text": "Attention!"
            }
          ]
        },
        {
          "type": "Container",
          "color": "light",
          "spacing": "small",
          "items": [
            {
              "type": "TextBlock",
              "text": "Light!"
            }
          ]
        },
        {
          "type": "Container",
          "color": "dark",
          "spacing": "small",
          "items": [
            {
              "type": "TextBlock",
              "text": "Dark!"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "factSet",
      "title": "FactSet",
      "items": [
        {
          "type": "TextBlock",
          "text": "FactSet",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Hello:",
              "value": "World"
            },
            {
              "title": "HELLO:",
              "value": "WORLD"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "image",
      "title": "Image",
      "items": [
        {
          "type": "TextBlock",
          "text": "Image",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "Image",
          "url": "https://tymly.io/wp-content/uploads/2017/11/logo-tymly-main-colour.png",
          "size": "large",
          "spacing": "large"
        }
      ]
    },
    {
      "type": "Container",
      "id": "imageSet",
      "title": "ImageSet",
      "items": [
        {
          "type": "TextBlock",
          "text": "ImageSet",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "ImageSet"
        }
      ]
    },
    {
      "type": "Container",
      "id": "inputChoiceSet",
      "title": "Input.ChoiceSet",
      "items": [
        {
          "type": "TextBlock",
          "text": "Input.ChoiceSet",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "TextBlock",
          "text": "ChoiceSet (style: expanded)",
          "spacing": "large"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "choice",
          "spacing": "medium",
          "value": "CHOICE_1",
          "choices": [
            {
              "title": "Choice 1",
              "value": "CHOICE_1"
            },
            {
              "title": "Choice 2",
              "value": "CHOICE_2"
            },
            {
              "title": "Choice 3",
              "value": "CHOICE_3"
            }
          ],
          "style": "expanded"
        },
        {
          "type": "TextBlock",
          "text": "ChoiceSet (style: compact)",
          "spacing": "large"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "choice",
          "spacing": "medium",
          "value": "CHOICE_1",
          "choices": [
            {
              "title": "Choice 1",
              "value": "CHOICE_1"
            },
            {
              "title": "Choice 2",
              "value": "CHOICE_2"
            },
            {
              "title": "Choice 3",
              "value": "CHOICE_3"
            }
          ],
          "style": "compact"
        },
        {
          "type": "TextBlock",
          "text": "ChoiceSet (isMultiSelect: true)",
          "spacing": "large"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "choiceMulti",
          "spacing": "medium",
          "value": "CHOICE_1,CHOICE_2",
          "choices": [
            {
              "title": "Choice 1",
              "value": "CHOICE_1"
            },
            {
              "title": "Choice 2",
              "value": "CHOICE_2"
            },
            {
              "title": "Choice 3",
              "value": "CHOICE_3"
            }
          ],
          "isMultiSelect": true
        }
      ]
    },
    {
      "type": "Container",
      "id": "inputDate",
      "title": "Input.Date",
      "items": [
        {
          "type": "TextBlock",
          "text": "Input.Date",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "id": "date",
          "type": "Input.Date",
          "placeholder": "Input.Date",
          "spacing": "medium"
        }
      ]
    },
    {
      "type": "Container",
      "id": "inputNumber",
      "title": "Input.Number",
      "items": [
        {
          "type": "TextBlock",
          "text": "Input.Number",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "id": "number",
          "type": "Input.Number",
          "placeholder": "Input.Number",
          "spacing": "medium"
        }
      ]
    },
    {
      "type": "Container",
      "id": "inputText",
      "title": "Input.Text",
      "items": [
        {
          "type": "TextBlock",
          "text": "Input.Text",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "id": "text",
          "type": "Input.Text",
          "placeholder": "Input.Text",
          "spacing": "medium"
        }
      ]
    },
    {
      "type": "Container",
      "id": "inputTime",
      "title": "Input.Time",
      "items": [
        {
          "type": "TextBlock",
          "text": "Input.Time",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "id": "time",
          "type": "Input.Time",
          "placeholder": "Input.Time",
          "spacing": "medium"
        }
      ]
    },
    {
      "type": "Container",
      "id": "inputToggle",
      "title": "Input.Toggle",
      "items": [
        {
          "type": "TextBlock",
          "text": "Input.Toggle",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "id": "toggle",
          "type": "Input.Toggle",
          "spacing": "medium",
          "title": "Input.Toggle"
        }
      ]
    },
    {
      "type": "Container",
      "id": "jumbotron",
      "title": "Jumbotron",
      "items": [
        {
          "type": "TextBlock",
          "text": "Jumbotron",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "Jumbotron",
          "backgroundImage": "wmfs/pizza.jpg",
          "title": "Title",
          "subtitle": "Subtitle",
          "wash": "black"
        }
      ]
    },
    {
      "type": "Container",
      "id": "media",
      "title": "Media",
      "items": [
        {
          "type": "TextBlock",
          "text": "Media",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "Media"
        }
      ]
    },
    {
      "type": "Container",
      "id": "media",
      "title": "MediaSource",
      "items": [
        {
          "type": "TextBlock",
          "text": "MediaSource",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "MediaSource"
        }
      ]
    },
    {
      "type": "Container",
      "id": "table",
      "title": "Table",
      "items": [
        {
          "type": "TextBlock",
          "text": "Table",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "Table",
          "title": "Opinions (Add some via CardView example above to see them appear in Table here)",
          "arrayPath": "cardView",
          "columns": [
            {
              "title": "Opinion",
              "field": "opinion"
            }
          ],
          "resultLimit": 5
        }
      ]
    },
    {
      "type": "Container",
      "id": "tabset",
      "title": "TabSet",
      "items": [
        {
          "type": "TextBlock",
          "text": "TabSet",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "TabSet",
          "spacing": "large",
          "tabs": [
            {
              "type": "Tab",
              "title": "Tab 1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Tab 1 Content"
                }
              ]
            },
            {
              "type": "Tab",
              "title": "Tab 2",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Tab 2 Content"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "id": "textBlock",
      "title": "TextBlock",
      "items": [
        {
          "type": "TextBlock",
          "text": "TextBlock",
          "size": "large",
          "spacing": "large",
          "separator": true
        },
        {
          "type": "TextBlock",
          "text": "This is a block of text!",
          "color": "accent"
        }
      ]
    }
  ]
}