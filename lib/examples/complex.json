{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "backgroundImage": "https://ichef.bbci.co.uk/food/ic/food_16x9_832/recipes/quick_pepperoni_pizza_64616_16x9.jpg",
      "items": [
        {
          "type": "TextBlock",
          "size": "Large",
          "color": "Light",
          "text": "Pizza Place"
        },
        {
          "type": "TextBlock",
          "size": "Small",
          "color": "Light",
          "text": "This is an example view where you can order some imaginary pizza."
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "size": "Large",
          "text": "Your Details"
        },
        {
          "type": "Input.Text",
          "id": "firstName",
          "placeholder": "First Name"
        },
        {
          "type": "Input.Text",
          "id": "lastName",
          "placeholder": "Last Name"
        },
        {
          "type": "Input.Number",
          "id": "phoneNumber",
          "placeholder": "Phone Number"
        },
        {
          "type": "TextBlock",
          "size": "Medium",
          "text": "Dietary Requirements"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "dietaryRequirements",
          "choices": [
            {
              "title": "Peanut Allergy",
              "value": "PEANUT"
            },
            {
              "title": "Gluten Free",
              "value": "GLUTEN_FREE"
            },
            {
              "title": "Dairy Free",
              "value": "DAIRY_FREE"
            },
            {
              "title": "Other",
              "value": "OTHER"
            }
          ],
          "isMultiSelect": true
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "size": "Large",
          "text": "The Pizza"
        },
        {
          "type": "TextBlock",
          "size": "Medium",
          "text": "What size pizza?"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "size",
          "value": "M",
          "choices": [
            {
              "title": "Small",
              "value": "S"
            },
            {
              "title": "Medium",
              "value": "M"
            },
            {
              "title": "Large",
              "value": "L"
            },
            {
              "title": "Extra Large",
              "value": "XL"
            },
            {
              "title": "Extra Extra Large",
              "value": "XXL"
            }
          ],
          "style": "expanded"
        },
        {
          "type": "TextBlock",
          "size": "Medium",
          "text": "Would you like it savoury or sweet?"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "savouryOrSweet",
          "choices": [
            {
              "title": "Savoury",
              "value": "SAVOURY"
            },
            {
              "title": "Sweet",
              "value": "SWEET"
            }
          ],
          "style": "expanded"
        },
        {
          "type": "TextBlock",
          "size": "Medium",
          "text": "Would you like to collect your pizza or have it delivered?",
          "wrap": true
        },
        {
          "type": "Input.ChoiceSet",
          "id": "deliveryOrCollection",
          "value": "COLLECT",
          "choices": [
            {
              "title": "Collect",
              "value": "COLLECT"
            },
            {
              "title": "Deliver",
              "value": "DELIVER"
            }
          ],
          "style": "expanded"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
