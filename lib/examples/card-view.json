{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Jumbotron",
      "backgroundImage": "wmfs/pizza.jpg",
      "title": "Pizza Place",
      "subtitle": "This is an example of how sub-views work.",
      "wash": "black"
    },
    {
      "type": "Container",
      "id": "starters",
      "title": "Starters",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "text": "Starters!",
          "size": "large"
        },
        {
          "type": "TextBlock",
          "text": "Pick some things to start...",
          "size": "medium"
        },
        {
          "id": "starters",
          "type": "CardView",
          "title": "Add a starter!",
          "card": {
            "type": "AdaptiveCard",
            "version": "1.0",
            "body": [
              {
                "type": "TextBlock",
                "text": "Starter"
              },
              {
                "id": "starterType",
                "type": "Input.ChoiceSet",
                "spacing": "medium",
                "choices": [
                  {
                    "value": "WEDGES",
                    "title": "Wedges"
                  },
                  {
                    "value": "CHICKEN_WINGS",
                    "title": "Chicken Wings"
                  }
                ]
              },
              {
                "id": "starterQuantity",
                "type": "Input.Number",
                "spacing": "medium",
                "placeholder": "Quantity",
                "default": 2
              }
            ]
          }
        }
      ]
    },
    {
      "type": "Container",
      "id": "pizza",
      "title": "Pizza",
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "text": "Pizza!",
          "size": "large"
        },
        {
          "type": "TextBlock",
          "text": "The main event...",
          "size": "medium"
        },
        {
          "id": "pizzas",
          "type": "CardView",
          "title": "Add a pizza!",
          "card": {
            "type": "AdaptiveCard",
            "version": "1.0",
            "body": [
              {
                "type": "TextBlock",
                "text": "Pizza"
              },
              {
                "id": "pizzaType",
                "type": "Input.ChoiceSet",
                "spacing": "medium",
                "choices": [
                  {
                    "value": "HAWAIIAN",
                    "title": "The Hawaiian"
                  },
                  {
                    "value": "PEPPERONI",
                    "title": "Pepperoni"
                  },
                  {
                    "value": "VEGGIE",
                    "title": "The Veggie"
                  }
                ]
              },
              {
                "id": "pizzaQuantity",
                "type": "Input.Number",
                "spacing": "medium",
                "placeholder": "Quantity",
                "default": 1
              },
              {
                "id": "dips",
                "type": "CardView",
                "title": "Add a dip!",
                "card": {
                  "type": "AdaptiveCard",
                  "version": "1.0",
                  "body": [
                    {
                      "type": "TextBlock",
                      "text": "Dip"
                    },
                    {
                      "id": "dipType",
                      "type": "Input.ChoiceSet",
                      "spacing": "medium",
                      "choices": [
                        {
                          "value": "BBQ",
                          "title": "Barbecue"
                        },
                        {
                          "value": "RANCH",
                          "title": "Ranch Dressing"
                        }
                      ]
                    },
                    {
                      "id": "dipQuantity",
                      "type": "Input.Number",
                      "spacing": "medium",
                      "placeholder": "Quantity",
                      "default": 3
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ]
}
