{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Jumbotron",
      "backgroundImage": "wmfs/pizza",
      "heading": "Pizza Place",
      "subHeading": "This is an example of how sub-views work",
      "textColor": "white"
    },
    {
      "type": "CardList",
      "heading": "Starters!",
      "instanceHeadingTemplate": "{{ item.starterType | replaceWithTitle(lists.$simpleTitleMaps.starterType)}}",
      "instanceDescTemplate": "You'll be wanting {{item.starterQuantity}} of these.",
      "subHeading": "Pick something to start...",
      "buttonText": "ADD A STARTER!",
      "card": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [
          {
            "type": "TextBlock",
            "text": "Starter",
            "size": "large",
            "isSubtle": "true"
          },
          {
            "type": "Input.ChoiceSet",
            "title": "Starter",
            "id": "starter",
            "choices": [
              {
                "type": "Input.Choice",
                "title": "Wedges",
                "value": "WEDGES"
              },
              {
                "type": "Input.Choice",
                "title": "Chicken Wings",
                "value": "CHICKEN_WINGS"
              }
            ]
          },
          {
            "type": "Input.Number",
            "id": "quantity",
            "placeholder": "Quantity",
            "value": "2"
          }
        ],
        "actions": [
          {
            "type": "Action.Cancel",
            "title": "Close"
          },
          {
            "type": "Action.Submit",
            "title": "Save"
          }
        ]
      }
    },
    {
      "type": "CardList",
      "heading": "Pizza!",
      "instanceHeadingTemplate": "{{item.pizzaType | replaceWithTitle(lists.$simpleTitleMaps.pizzaType)}}",
      "instanceDescTemplate": "You'll be wanting {{item.pizzaQuantity}} of these.",
      "subHeading": "The main event...",
      "buttonText": "ADD A PIZZA!",
      "card": {
        "type": "AdaptiveCard",
        "version": "1.0",
        "body": [
          {
            "type": "TextBlock",
            "text": "Pizza",
            "size": "large",
            "isSubtle": "true"
          },
          {
            "type": "Input.ChoiceSet",
            "title": "Pizza",
            "id":"pizza",
            "choices": [
              {
                "type": "Input.Choice",
                "title": "The Hawaiian",
                "value": "HAWAIIAN"
              },
              {
                "type": "Input.Choice",
                "title": "Pepperoni",
                "value": "PEPPERONI"
              },
              {
                "type": "Input.Choice",
                "title": "The Veggie",
                "value": "VEGGIE"
              }
            ]
          },
          {
            "type": "Input.Number",
            "id": "quantity",
            "placeholder": "Quantity",
            "value": "1"
          },
          {
            "type": "TextBlock",
            "text": "Dips!",
            "size": "large",
            "isSubtle": "true"
          },
          {
            "type": "TextBlock",
            "text": "Something to dunk those crusts into",
            "size": "small",
            "isSubtle": "true"
          },
          {
            "type": "CardList",
            "heading": "Dips!",
            "subHeading": "Something to dunk those crusts into?",
            "buttonText": "ADD A DIP!",
            "card": {
              "type": "AdaptiveCard",
              "version": "1.0",
              "body": [
                {
                  "type": "TextBlock",
                  "text": "Dip",
                  "size": "large",
                  "isSubtle": "true"
                },
                {
                  "type": "Input.ChoiceSet",
                  "id": "dip",
                  "choices": [
                    {
                      "type": "Input.Choice",
                      "title": "Barbecue",
                      "value": "BARBECUE"
                    },
                    {
                      "type": "Input.Choice",
                      "title": "Ranch Dressing",
                      "value": "RANCH_DRESSING"
                    }
                  ]
                },
                {
                  "type": "Input.Number",
                  "id": "quantity",
                  "value": "3"
                }
              ],
              "actions": [
                {
                  "type": "Action.Cancel",
                  "title": "Close"
                },
                {
                  "type": "Action.Submit",
                  "title": "Save"
                }
              ]
            }
          }
        ],
        "actions": [
          {
            "type": "Action.Cancel",
            "title": "Close"
          },
          {
            "type": "Action.Submit",
            "title": "Save"
          }
        ]
      }
    }
  ]
}
