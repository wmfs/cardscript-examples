{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Jumbotron",
      "backgroundImage": "blue",
      "heading": "All done!",
      "subHeading": "We're all done here, we would really appreciate some feedback though!",
      "textColour": "white"
    },
    {
      "type": "Input.Toggle",
      "id": "userWouldLikeToLeaveFeedback",
      "title": "I would like to leave some feedback",
      "default": "false"
    },
    {
      "type": "Input.Text",
      "id": "feedback",
      "placeholder": "Feedback",
      "isMultiLine": "true",
      "showWhen": "data.userWouldLikeToLeaveFeedback"
    }
  ]
}
