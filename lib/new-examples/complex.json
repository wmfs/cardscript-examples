{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Jumbotron",
      "backgroundImage": "wmfs/pizza",
      "wash": "black",
      "heading": "Pizza Place",
      "subHeading": "This is an example view where you can order some imaginary pizza.",
      "textColor": "white"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Your Details",
          "size": "large"
        },
        {
          "type": "Input.Text",
          "id": "firstName",
          "placeholder": "First Name"
        },
        {
          "type": "Input.Text",
          "id": "lastName",
          "placeholder": "Last Name"
        },
        {
          "type": "Input.Number",
          "id": "phoneNumber",
          "placeholder": "Phone Number"
        },
        {
          "type": "Input.Address",
          "id": "address"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "dietaryReqs",
          "title": "Do you have any dietary requirements?",
          "isMultiSelect": "true",
          "choices": [
            {
              "type": "Input.Choice",
              "title": "Peanut Allergy",
              "value": "PEANUT_ALLERGY"
            },
            {
              "type": "Input.Choice",
              "title": "Gluten Free",
              "value": "GLUTEN_FREE"
            },
            {
              "type": "Input.Choice",
              "title": "Dairy Free",
              "value": "DAIRY_FREE"
            },
            {
              "type": "Input.Choice",
              "title": "Other",
              "value": "OTHER"
            }
          ]
        },
        {
          "type": "Input.Text",
          "id": "otherReqs",
          "title": "Please enter your other dietary requirements",
          "showWhen": "data.dietaryReqs.contains('OTHER')"
        }
      ]
    },
    {
      "type": "Container",
      "separator": "true",
      "items": [
        {
          "type": "TextBlock",
          "text": "The Pizza",
          "size": "large"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "size",
          "title": "What size pizza?",
          "value": "M",
          "style": "expanded",
          "choices": [
            {
              "type": "Input.Choice",
              "title": "Small",
              "value": "S"
            },
            {
              "type": "Input.Choice",
              "title": "Medium",
              "value": "M"
            },
            {
              "type": "Input.Choice",
              "title": "Large",
              "value": "L"
            },
            {
              "type": "Input.Choice",
              "title": "Extra Large",
              "value": "XL"
            },
            {
              "type": "Input.Choice",
              "title": "Extra Extra Large",
              "value": "XXL"
            }
          ]
        },
        {
          "type": "Input.ChoiceSet",
          "id": "savouryOrSweet",
          "title": "Would you like it savoury or sweet?",
          "style": "expanded",
          "choices": [
            {
              "type": "Input.Choice",
              "title": "Savoury",
              "value": "SAVOURY"
            },
            {
              "type": "Input.Choice",
              "title": "Sweet",
              "value": "SWEET"
            }
          ]
        },
        {
          "type": "Input.ChoiceSet",
          "id": "base",
          "showWhen": "data.savouryOrSweet==='SAVOURY'",
          "title": "What base would you like?",
          "value": "TOMATO_SAUCE",
          "choices": [
            {
              "type": "Input.Choice",
              "title": "Tomato Sauce",
              "value": "TOMATO_SAUCE"
            },
            {
              "type": "Input.Choice",
              "title": "BBQ",
              "value": "BBQ"
            },
            {
              "type": "Input.Choice",
              "title": "Sweet and Sour",
              "value": "SWEET_AND_SOUR"
            }
          ]
        },
        {
          "type": "Input.Toggle",
          "id": "likeSpice",
          "title":"Do you like it hot?",
          "showWhen": "data.savouryOrSweet==='SAVOURY'"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "howSpicy",
          "title": "How hot do you like it?",
          "style": "expanded",
          "showWhen": "data.likeSpice === 'true'",
          "choices": [
            {
              "type": "Input.Choice",
              "title": "1 Chilli",
              "value": "1"
            },
            {
              "type": "Input.Choice",
              "title": "2 Chillies",
              "value": "2"
            },
            {
              "type": "Input.Choice",
              "title": "3 Chillies",
              "value": "3"
            },
            {
              "type": "Input.Choice",
              "title": "4 Chillies",
              "value": "4"
            },
            {
              "type": "Input.Choice",
              "title": "5 Chillies",
              "value": "5"
            },
            {
              "type": "Input.Choice",
              "title": "6 Chillies",
              "value": "6"
            }
          ]
        } ,
        {
          "type": "Container",
          "backgroundColor": "red",
          "showWhen": "data.likeSpice === 'true'",
          "items": [
            {
              "type": "TextBlock",
              "text": "Warning!",
              "size": "medium",
              "color": "white"
            },
            {
              "type": "TextBlock",
              "text": "We will not be held responsible if you can't handle the heat!",
              "size": "small",
              "color": "white"
            }
          ]
        },
        {
          "type": "Input.ChoiceSet",
          "id": "toppings",
          "title": "Select what toppings you would like (up to 3)",
          "isMultiSelect": "true",
          "showWhen": "data.savouryOrSweet==='SAVOURY'",
          "choices": [
            {
              "type": "Input.Choice",
              "title": "Pepperoni",
              "value": "PEPPERONI"
            },
            {
              "type": "Input.Choice",
              "title": "Olives",
              "value": "OLIVES"
            },
            {
              "type": "Input.Choice",
              "title": "Peppers",
              "value": "PEPPERS"
            },
            {
              "type": "Input.Choice",
              "title": "Pineapple",
              "value": "PINEAPPLE"
            },
            {
              "type": "Input.Choice",
              "title": "Ham",
              "value": "HAM"
            },
            {
              "type": "Input.Choice",
              "title": "Chicken",
              "value": "CHICKEN"
            },
            {
              "type": "Input.Choice",
              "title": "Spicy Beef",
              "value": "SPICY_BEEF"
            },
            {
              "type": "Input.Choice",
              "title": "Jalapenos",
              "value": "JALAPENOS"
            }
          ]
        },
        {
          "type": "Input.ChoiceSet",
          "id": "primaryFlav",
          "title": "What primary flavour would you like?",
          "showWhen": "data.savouryOrSweet==='SWEET'",
          "choices": [
            {
              "type": "Input.Choice",
              "title": "Milk Chocolate",
              "value": "MILK_CHOCOLATE"
            },
            {
              "type": "Input.Choice",
              "title": "White Chocolate",
              "value": "WHITE_CHOCOLATE"
            },
            {
              "type": "Input.Choice",
              "title": "Dark Chocolate",
              "value": "DARK_CHOCOLATE"
            },
            {
              "type": "Input.Choice",
              "title": "Toffee",
              "value": "TOFFEE"
            }
          ]
        },
        {
          "type": "Input.ChoiceSet",
          "id": "secondaryFlav",
          "title": "What secondary flavour would you like?",
          "showWhen": "data.primaryFlav",
          "choices": [
            {
              "type": "Input.Choice",
              "title": "Milk Chocolate",
              "value": "MILK_CHOCOLATE"
            },
            {
              "type": "Input.Choice",
              "title": "White Chocolate",
              "value": "WHITE_CHOCOLATE"
            },
            {
              "type": "Input.Choice",
              "title": "Dark Chocolate",
              "value": "DARK_CHOCOLATE"
            },
            {
              "type": "Input.Choice",
              "title": "Toffee",
              "value": "TOFFEE"
            }
          ]
        },
        {
          "type": "Input.Toggle",
          "id": "sprinkles",
          "title": "Would you like Hundreds and Thousands sprinkles on your pizza?",
          "showWhen": "data.savouryOrSweet==='SWEET'"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "collectOrDeliver",
          "title": "Would you like to collect your pizza or have it delivered?",
          "style": "expanded",
          "choices": [
            {
              "type": "Input.Choice",
              "title": "Collect",
              "value": "COLLECT"
            },
            {
              "type": "Input.Choice",
              "title": "Deliver",
              "value": "DELIVER"
            }
          ]
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Cancel",
          "title": "Cancel"
        },
        {
          "type": "Action.Submit",
          "title": "Submit"
        }
      ]
    }
  ]
}
